<header>
	<%= render 'admin/header' %>
</header><!-- /header -->

<div class="container">
	<div class="row">
		
		
		
		<div class="col-xs-7">

			<%= form_for(@genre, url: {controller: 'admin/genres', action: 'create' }) do |f| %>
				
				<%= f.label "ジャンル名" %>
				<%= f.text_field :genre %>

				<%= f.label "有効" %>
    			<%= f.check_box :invalid_status, {:checked => true} %>

    			<%= f.label "無効" %>
    			<%= f.check_box :invalid_status, {} %>


    			<%= f.submit '追加' %>

			<% end %>

			<h4>ジャンル一覧・追加</h4>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th colspan="4"></th>
					</tr>
				</thead>

				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.genre %></td>
							
							<td><%= genre.invalid_status %></td>

							<td><%= link_to 'Edit', edit_admin_genre_path(genre), class: "btn-sm btn-success edit_book_#{genre.id}" %></td>
  							
						</tr>
					<% end %>
				</tbody>
				<!-- ジャンル一覧 -->
			</table>
			
		</div>
		
	</div>
	
</div>