<header>
	<%= render 'admin/header' %>
</header><!-- /header -->

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>商品一覧画面</h2>
      <div class="new-btn-wrap">
        <%= link_to "商品登録", new_admin_item_path, class: "btn btn-primary btn-new-register btn-lg"; %>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= "#{item.price}円" %></td>
              <td><%= item.genre.genre %></td>
              <td><%= item.sale_status ? "販売中" : "売り切れ" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        
    </div>
  </div>