<header>
	<%= render 'admin/header' %>
</header><!-- /header -->

<div class="container">
	<div class="row">
		<div class="col-xs-5">
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<!-- 商品一覧情報 -->
					<% @items.each do |item| %>
						<tr>
							<td><%= item.id %></td>
							<td><%= item.name %></td>
							<td><%= item.price %></td>
							<td><%= item.genre_id %></td>
							<td><%= item.sale_status %></td>
						
						</tr>
					<% end %>
				</tbody>

			</table>
		</div>
	</div>
</div>