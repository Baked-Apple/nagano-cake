<%= search_form_for [:admin, search] do |f| %>
  <div class="item_search_form">
    <div class="form-group row">
      <div class="col-xs-12">
        <%= f.label :name_cont, :商品を検索する %><br>
        <%= f.search_field :name_cont, placeholder: "例)モンブラン", autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-12">
        <%= f.label :price_cont, :価格 %>
      </div>
      <div class="col-xs-5">
        <%= f.search_field :price_gteq, placeholder: "¥ Min", autofocus: true, class: "form-control" %>
      </div>
      <div class="col-xs-2">
        <p> 〜 </p>
      </div>
      <div class="col-xs-5">
        <%= f.search_field :price_lteq, placeholder: "¥ Max", autofocus: true, class: "form-control" %><br>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-12">
        <%= f.label :sale_status_eq, :販売ステータス %><br>
        <%= f.select :sale_status_eq, [["売切れ", 0],["販売中", 1]], include_blank: "--選択してください--", autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="item_search_btns">
      <%= f.submit "検索", class:"btn btn-info" %>
    </div>
  </div>
<% end %>