<div class="container">
  <div class="row product-ditail-content">
    <div class="col-xs-4">
      
      <h2>商品詳細画面</h2>
      <%= attachment_image_tag @item, :image, :size => '350x300' %>
    </div>
    <div class="col-xs-8">
      <table class="table product-ditail-table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.genre %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= "#{@item.price}円" %></td>
        </tr>
        <tr>
          <th>税込価格</th>
          <td><%= (@item.price * 1.1).floor %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.sale_status == 0 ? "売切れ" : "販売中" %></td>
        </tr>
      </table>
      <div>
        <%= link_to "編集", edit_admin_item_path(@item.id), class: "btn btn-success btn-new-register btn-lg" %>
        <%= link_to "続けて登録", new_admin_item_path, class: "btn btn-success btn-new-register btn-lg"  %>
      </div>
    </div>
  </div>
</div>
</div>