<h3>注文履歴一覧</h3>

<table class='table'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
    	<td><%= link_to order.created_at.strftime('%Y/%m/%d/%H:%M:%S'), admin_order_path(order.id) %></td>
        <td><%= order.member.last_name%><%= order.member.first_name%></td>
        <td><%= order.order_items.sum(:quantity) %></td>
        <td>
          <% if order.order_status == "pending" %>入金待ち
          <% elsif order.order_status == "confirmed" %>入金確認
          <% elsif order.order_status == "making" %>製作中
          <% elsif order.order_status == "preparing" %>発送準備中
          <% else order.order_status == "delivered" %>発送済み
          <% end %>
        </td>
    </tr>
    <% end %>

  </tbody>
</table>