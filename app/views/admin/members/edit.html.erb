<h3><%= @member.last_name %><%= @member.first_name %>の会員情報編集</h3>

<%= form_for(@member, url: admin_member_path) do |f| %>

  <div class="form-group">
    <%= f.label :顧客ID %>
    <%= @member.id %>
  </div>

  <div class="form-group">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :kana_last_name, autofocus: true %>
    <%= f.text_field :kana_first_name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号%>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :会員ステータス %>
  </div>

  <div class="actions row">
      <%= f.submit '変更内容を保存する',　class:"data-disable-with" %>
  </div>
<% end %>
