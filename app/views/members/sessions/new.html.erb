<h3>会員の方はこちらからログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス, class: "col-xs-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class: "col-xs-3" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <%= link_to "=> パスワードを忘れた方はこちら", new_member_password_path %>

<!--   <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %> -->

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<h4>登録がお済みでない方</h4>
<p><%= render "members/shared/links" %>から新規登録を行ってください</p>
