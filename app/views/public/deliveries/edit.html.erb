<h3>配送先編集</h3>
<% if @delivery.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @delivery.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for(@delivery, url: public_delivery_path(@delivery), method: :patch) do |f| %>
	<div class="field">
	<%= f.label :"郵便番号(ハイフンなし)" %>
	<%= f.text_field :postal_code %><br>
	<%= f.label :"住所" %>
	<%= f.text_field :address, :size => "80*30" %><br>
	<%= f.label :"宛名" %>
	<%= f.text_field :name %>
	<%= f.submit '編集する', class: "btn btn-info" %>
	</div>
	<% end %>