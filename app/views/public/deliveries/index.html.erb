<h3>配送先登録/一覧</h3>
<% if @delivery.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @delivery.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for(@delivery, url: public_deliveries_path, method: :post) do |f| %>
	<div class="field">
		<%= f.label :"郵便番号(ハイフンなし)" %>
		<%= f.text_field :postal_code %><br>
		<%= f.label :"住所" %>
		<%= f.text_field :address, :size => "80*30", collection: JpPrefecture::Prefecture.all, :value_method => :name %><br>
		<%= f.label :"宛名" %>
		<%= f.text_field :name %>
		<%= f.submit '登録する', class: "btn btn-success" %>
	</div>
<% end %><br>

<table border="1" style="border-collapse: collapse">
	<thead>
		<tr height="50">
			<th width="100">郵便番号</th>
			<th width="300">住所</th>
			<th width="150">宛名</th>
			<th width="200"></th>
		</tr>
	</thead>
	<tbody>
		<% @deliveries.each do |delivery| %>
		<tr height="50">
			<td><%= delivery.postal_code %></td>
			<td><%= delivery.address %></td>
			<td><%= delivery.name %></td>
			<td>
			<%= link_to "編集する", edit_public_delivery_path(delivery.id), class: "btn btn-info" %><%= link_to "削除する", public_delivery_path(delivery.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>