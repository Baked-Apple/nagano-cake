<h2>配送先登録/一覧</h2>
<div class="container">

	<div class="row">
		<%= form_for(@delivery, url: public_deliveries_path, method: :post) do |f| %>
		<div class="col-md-3"><p>郵便番号(ハイフンなし)</p></div>
		<div class="col-md-3"><%= f.text_field :postal_code %></div>
		<% end %>
	</div>

	<div class="row">
		<%= form_for(@delivery, url: public_deliveries_path, method: :post) do |f| %>
		<div class="col-md-3"><p>住所</p></div>
		<div class="col-md-6"><%= f.text_field :address %></div>
		<% end %>
	</div>

	<div class="row">
		<%= form_for(@delivery, url: public_deliveries_path, method: :post) do |f| %>
		<div class="col-md-3"><p>宛名</p></div>
		<div class="col-md-3"><%= f.text_field :name %></div>
		<div class="col-md-3"><%= f.submit '登録する', class: "btn btn-success" %></div>
		<% end %>
	</div>
</div>

<table border="1" style="border-collapse: collapse">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @deliveries.each do |delivery| %>
			<td><%= delivery.postal_code %></td>
			<td><%= delivery.address %></td>
			<td><%= delivery.name %></td>
			<td>編集する　削除する</td>
			<% end %>
		</tr>
	</tbody>
</table>