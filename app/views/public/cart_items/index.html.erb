<header>
	<%= render 'public/header' %>
</header><!-- /header -->

<h2>ショッピングカート</h2>

	<thead>
		<tr>
			<th width="200">商品名</th>
			<th width="150">単価(税込)</th>
			<th width="150">数量</th>
			<th width="150">小計</th>
			<th width="150"></th>
		</tr>
	</thead>
	<tbody>
		<% @member.cart_items.each do |cart_item| %>
		<tr>
			<td><%= cart_item.item.name %></td>
			<td><%= cart_item.item.price %></td>
			<td>
				<%= form_for(cart_item, url: public_cart_item_path(cart_item.item,cart_item),method: :patch) do |f| %>
					<%= f.text_field :quantity %>
					<%= f.submit "変更" %>
				<% end %>
			</td>
			<td><%= cart_item.quantity * cart_item.item.price %></td>
			<td><%= link_to "削除する", public_cart_item_path(cart_item.item,cart_item), method: :delete, class: "btn btn-danger" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "買い物を続ける", public_items_path, class: "btn btn-info" %>
<table border="1" style="border-collapse: collapse">
	<tr>
		<th>合計金額</th>
		<td></td>
	</tr>
</table>

