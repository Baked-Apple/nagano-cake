<h3>注文履歴一覧</h3>

<table class="table">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= order.created_at %></td>
				<td>
					<%= order.postal_code %><br>
					<%= order.address %><br>
					<%= order.delivery_name %><br>
				</td>
				<td><%= order.current_member.cart_items %></td> #current_cartを定義すれば持ってこれる？
				<td>入金済み</td>
				<td><%= link_to "表示する", public_order_path(order.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>