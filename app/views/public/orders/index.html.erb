<h3>注文履歴一覧</h3>

<table class="table">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= order.created_at.strftime("%Y/%m/%d") %></td>
				<td>
					<%= order.postal_code %><br>
					<%= order.address %><br>
					<%= order.delivery_name %><br>
				</td>
				<td>
					<% order.order_items.each do |order_item| %>
						<%= "・#{order_item.item.name}" %>
					<% end %>
				</td>
				<td>¥ <%= order.total_fee %></td>
				<% if order.order_status == "pending" %>
					<td>入金待ち</td>
				<% elsif order.order_status == "confirmed" %>
					<td>入金確認</td>
				<% elsif order.order_status == "making" %>
					<td>製作中</td>
				<% elsif order.order_status == "preparing" %>
					<td>発送準備中</td>
				<% else order.order_status == "delivered" %>
					<td>発送済み</td>
				<% end %>
				<td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary" %></td>
			</tr>
		<% end %>
	</tbody>
</table>