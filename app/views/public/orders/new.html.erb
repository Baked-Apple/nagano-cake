<h3>注文情報入力</h3>

<%= form_with model: @order, url: public_orders_confirm_path, method: :get, local: true do |f| %>
	<h4>支払方法</h4>
	<div class="field">
		<%= f.radio_button :pay_type, "credit", checked: true %>
		<%= f.label :pay_type, :クレジットカード %>
	</div>
	<div class="field">
		<%= f.radio_button :pay_type, "bank" %>
		<%= f.label :pay_type, :銀行振込 %>
	</div>

	<h4>お届け先</h4>

	<div class="field">
		<%= f.radio_button :delivery_info, "self_addr", checked: true %>ご自身の住所<br>
		<%= "〒#{current_member.postal_code.insert(3, "-")} #{current_member.address} #{current_member.last_name} #{current_member.first_name}" %>
	</div>

	<div class="field">
		<%= f.radio_button :delivery_info, "registered_addr" %>登録済住所から選択
		<%= f.collection_select(:registered_address, @deliveries, :id, :collect_delivery, {prompt: "選択してください"}, class: "form-control") %>
	</div>

	<div class="field">
		<%= f.radio_button :delivery_info, "new_addr" %>新しいお届け先<br>
		<%= f.label "郵便番号(ハイフンなし)" %>
		<%= f.text_field :postal_code, class: "form-control" %><br>
		<%= f.label "住所" %>
		<%= f.text_field :address, class: "form-control" %><br>
		<%= f.label "宛名" %>
		<%= f.text_field :delivery_name, class: "form-control" %><br>
	</div>

	<div class="actions">
		<%= f.submit "確認画面へ進む", class: "btn btn-primary order-new-submit" %>
	</div>
<% end %>