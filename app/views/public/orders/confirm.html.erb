<div class="row">

  <h3>注文情報確認</h3>

  <div class="col-xs-8">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込み)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, size: "50x50" %> <%= cart_item.item.name %></td>
            <td>¥ <%= (cart_item.item.price * 1.1).floor %></td>
            <td><%= cart_item.quantity %></td>
            <td>¥ <%= (cart_item.quantity * cart_item.item.price * 1.1).floor %></td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-4">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>送料</td>
          <td>¥ <%= @order.postage %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td>¥ <%= current_member.cart_item_sum %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td>¥ <%= @order.total_fee %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-xs-12">
    <div class="payment">
      <h4>支払方法</h4>
      <%= @pay %>
    </div>

    <div class="delivery">
      <h4>お届け先</h4>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.delivery_name %>
    </div>


    <%= form_with model: @order, url: public_orders_path do |f| %>
      <%= hidden_field_tag :delivery_info, @order.delivery_info %>
      <%= f.hidden_field :total_fee, value: @order.total_fee %>
      <%= f.hidden_field :postage, value: @order.postage %>
      <%= f.hidden_field :pay_type, value: @order.pay_type %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :delivery_name, value: @order.delivery_name %>
      <%= f.hidden_field :order_status, value: :pending %>
      <div class="action">
        <%= f.submit "購入を確定する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>