<h3>登録情報編集</h3>

<%= form_for(@member, url: public_mypage_path) do |f| %>
  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.label :"(姓)"%><%= f.text_field :last_name, autofocus: true %>
    <%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.label :"(セイ)"%><%= f.text_field :kana_last_name, autofocus: true %>
    <%= f.label :"(メイ)" %><%= f.text_field :kana_first_name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="actions row">
      <%= f.submit '変更内容を保存する',　class:"data-disable-with" %>
  </div>
<% end %>
